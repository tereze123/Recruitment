@model Recruitment.API.ViewModels.UserInformationViewModel

<div class="container">

    <div class="row">
        <h2 class="text-center">@Model.FirstName</h2>
    </div>
    <hr />

    <form asp-action="UserInformationEdit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <label asp-for="FirstName" class="col-md-offset-1 col-md-3 col-form-label"></label>
            <div class="col-md-3">
                <input asp-for="FirstName" class="form-control" />
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="LastName" class="col-md-offset-1 col-md-3 col-form-label"></label>
            <div class="col-md-3">
                <input asp-for="LastName" class="form-control" />
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="Email" class="col-md-offset-1 col-md-3 col-form-label"></label>
            <div class="col-md-3">
                <input asp-for="Email" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="row">
            <input type="submit" value="Saglabāt" class="btn btn-info pull-right" />
        </div>
    </form>
</div>