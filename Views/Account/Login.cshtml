@model Recruitment.API.ViewModels.LoginViewModel

<div class="container">

    <form method="post" asp-controller="Account" asp-action="Login"
          asp-route-returnurl="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Username" class="col-md-offset-1 col-md-3 col-form-label"></label>
            <div class="col-md-3">
                <input asp-for="Username" class="form-control" />
            </div>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-md-offset-1 col-md-3 col-form-label"></label>
            <div class="col-md-3">
                <input asp-for="Password" class="form-control" />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="RememberMe" class="col-md-offset-1 col-md-3 col-form-label"></label>
            <div class="col-md-3">
                <input asp-for="RememberMe" class="form-control" />
            </div>
            <span asp-validation-for="RememberMe" class="text-danger"></span>
        </div>
        <div class="form-group pull-right">
            <input type="submit" value="Ienākt" class="btn btn-success" />
        </div>
    </form>
</div>
