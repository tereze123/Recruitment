@model IEnumerable<Recruitment.API.Models.Vacancy>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center">Atvērtās vakances</h2>
<hr/>
<p class="pull-right">
    <a asp-action="Create">Pievienot jaunu vakanci</a>
    <i class="fa icon-plus-sign fa-5x"></i>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpeningDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClosingDate)
            </th>
            <th>
                Kandidātu skaits
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                 @item.OpeningDate.Date.ToShortDateString()
            <td>
                @item.ClosingDate.Date.ToShortDateString()
            </td>
            <td>
                
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
