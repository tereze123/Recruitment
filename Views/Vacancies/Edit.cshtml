@using Recruitment.API.Enums
@model Recruitment.API.Models.VacancyViewModel

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <h4><a asp-action="Index">Atpakaļ pie atvērtajām vakancēm</a></h4>
        </div>
    </div>
    <div class="row">
        <h2 class="text-center">@Html.DisplayFor(model => model.Name)</h2>
    </div>
    <hr />

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group row">
            <label asp-for="Name" class="col-md-offset-1 col-md-3 col-form-label"></label>
            <div class="col-md-3">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="OpeningDate" class="col-md-offset-1 col-md-3 col-form-label"></label>
            <div class="col-md-3">
                <input asp-for="OpeningDate" class="form-control" />
            </div>
            <span asp-validation-for="OpeningDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="ClosingDate" class="col-md-offset-1 col-md-3 col-form-label"></label>
            <div class="col-md-3">
                <input asp-for="ClosingDate" class="form-control" />
            </div>
            <span asp-validation-for="ClosingDate" class="text-danger"></span>
        </div>

        <p class="col-md-offset-1">Prasības:</p>
        <br />
        <p class="col-md-offset-1">Izglītība</p>
        <hr />


        @for (int i = 0; i < Model.Skills.Count(); i++)
        {
            if (Model.Skills[i].SkillTypeId != (int)SkillTypeEnum.Izglitiba)
            {
                continue;
            }
            <div class="form-group row">
                <input type="hidden" asp-for="@Model.Skills[i].Id" />
                <input type="hidden" asp-for="@Model.Skills[i].SkillTypeId" />
                <div class="col-md-3 col-md-offset-4">
                    <input asp-for="@Model.Skills[i].Value" class="form-control" />
                </div>
                <span asp-validation-for="Skills[i].Value" class="text-danger"></span>
            </div>
        }
        <br />
        <p class="col-md-offset-1">Prasmes</p>
        <hr />


        @for (int i = 0; i < Model.Skills.Count(); i++)
        {
            if (Model.Skills[i].SkillTypeId != (int)SkillTypeEnum.Prasme)
            {
                continue;
            }
            <div class="form-group row">
                <input type="hidden" asp-for="@Model.Skills[i].Id" />
                <input type="hidden" asp-for="@Model.Skills[i].SkillTypeId" />
                <div class="col-md-3 col-md-offset-4">
                    <input asp-for="@Model.Skills[i].Value" class="form-control" />
                </div>
                <span asp-validation-for="Skills[i].Value" class="text-danger"></span>
            </div>
        }
        <br />
        <p class="col-md-offset-1">Darba pieredze</p>
        <hr />


        @for (int i = 0; i < Model.Skills.Count(); i++)
        {
            if (Model.Skills[i].SkillTypeId != (int)SkillTypeEnum.DarbaPieredze)
            {
                continue;
            }
            <div class="form-group row">
                <input type="hidden" asp-for="@Model.Skills[i].Id" />
                <input type="hidden" asp-for="@Model.Skills[i].SkillTypeId" />
                <div class="col-md-3 col-md-offset-4">
                    <input asp-for="@Model.Skills[i].Value" class="form-control" />
                </div>
                <span asp-validation-for="Skills[i].Value" class="text-danger"></span>
            </div>
        }

        <div class="row">
            <input type="submit" value="Saglabāt" class="btn btn-info pull-right" />
        </div>
    </form>
    <div class="row">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Dzēst" class="btn btn-danger pull-right" />
        </form>
    </div>
</div>
