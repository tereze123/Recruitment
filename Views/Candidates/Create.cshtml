@model Recruitment.API.Models.Candidate


<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <h4><a asp-action="Index">Atpakaļ pie visiem kandidātiem</a></h4>
        </div>
    </div>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Name" class="col-md-offset-1 col-md-3 col-form-label"></label>
            <div class="col-md-3">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Surname" class="col-md-offset-1 col-md-3 col-form-label"></label>
            <div class="col-md-3">
                <input asp-for="Surname" class="form-control" />
            </div>
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="PhoneNumber" class="col-md-offset-1 col-md-3 col-form-label"></label>
            <div class="col-md-3">
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-md-offset-1 col-md-3 col-form-label"></label>
            <div class="col-md-3">
                <input asp-for="Email" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Vacancy" class="col-md-offset-1 col-md-3 col-form-label"></label>
            <div class="col-md-3">
                <select asp-for="VacancyId" class="form-control" asp-items="ViewBag.VacancyName"></select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="StatusId" class="col-md-offset-1 col-md-3 col-form-label"></label>
            <div class="col-md-3">
                <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusName"></select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="TestId" class="col-md-offset-1 col-md-3 col-form-label"></label>
            <div class="col-md-3">
                <select asp-for="TestId" class="form-control" asp-items="ViewBag.TestId"></select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="RegistrationDate" class="col-md-offset-1 col-md-3 col-form-label"></label>
            <div class="col-md-3">
                <input asp-for="RegistrationDate" class="form-control" />
            </div>
            <span asp-validation-for="RegistrationDate" class="text-danger"></span>
        </div>
        <div class="form-group pull-right">
            <input type="submit" value="Izveidot" class="btn btn-info" />
        </div>
    </form>
</div>