@model Recruitment.API.ViewModels.UserTypeViewModel

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <h4><a asp-action="Index">Atpakaļ pie visiem lietotājiem</a></h4>
        </div>

        <div class="row">
            <div class="col-sm-4">
                <h3>Vai tiešām dzēst?</h3>
            </div>
            <form asp-action="DeleteConfirmed" style="margin-top:1em">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Dzēst" class="btn btn-danger" />
            </form>
        </div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Role)
            </dd>
        </dl>
    </div>
</div>