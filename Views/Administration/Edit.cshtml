@model Recruitment.API.ViewModels.UserTypeViewModel

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <h4><a asp-action="Index">Atpakaļ pie visiem lietotājiem</a></h4>
        </div>
    </div>
    <div class="row">
        <h2 class="text-center">@Model.FirstName, @Model.LastName</h2>
    </div>
    <hr />

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group row">
            <label asp-for="FirstName" class="col-md-offset-1 col-md-3 col-form-label"></label>
            <div class="col-md-3">
                <input asp-for="FirstName" class="form-control" />
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="LastName" class="col-md-offset-1 col-md-3 col-form-label"></label>
            <div class="col-md-3">
                <input asp-for="LastName" class="form-control" />
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-md-offset-1 col-md-3 col-form-label"></label>
            <div class="col-md-3">
                <input asp-for="Email" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Role" class="col-md-offset-1 col-md-3 col-form-label"></label>
            <div class="col-md-3">
                <select asp-for="Role" class="form-control" asp-items="ViewBag.RoleNames"></select>
            </div>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
        <div class="row">
            <input type="submit" value="Saglabāt" class="btn btn-info pull-right" />
        </div>
    </form>
    <div class="row">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Dzēst" class="btn btn-danger pull-right" />
        </form>
    </div>
</div>